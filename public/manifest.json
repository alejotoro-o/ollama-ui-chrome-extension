{
    "manifest_version": 3,
    "name": "Ollama UI Chrome Extension",
    "version": "1.0.0",
    "description": "The Ollama UI Chrome Extension provides a user interface to chat with a local LLM.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      }
    },
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "permissions": [
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "http://localhost:11434/*"
    ]
}